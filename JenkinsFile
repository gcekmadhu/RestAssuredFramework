pipeline
{
    agent any

    tools{
    	maven 'maven'
        }

    environment{

        BUILD_NUMBER = "${BUILD_NUMBER}"

    }


    stages
    {
        stage('Build')
        {
            steps
            {
                 git 'https://github.com/jglick/simple-maven-project-with-tests.git'
                 bat "mvn -Dmaven.test.failure.ignore=true clean package"
            }
            post
            {
                success
                {
                    junit '**/target/surefire-reports/TEST-*.xml'
                    archiveArtifacts 'target/*.jar'
                }
            }
        }



        stage("Deploy to QA"){
            steps{
                echo("deploy to qa done")
            }
        }

        stage('Docker Build') {
            	agent any
              steps {
              	bat 'docker build -t latestapiframework:latest .'
              }
            }
            stage('Docker Push') {
            	agent any
              steps {
              	withCredentials([usernamePassword(credentialsId: 'dockerHub', passwordVariable: 'dockerHubPassword', usernameVariable: 'dockerHubUser')]) {
                	bat "docker login -u ${env.dockerHubUser} -p ${env.dockerHubPassword}"
                	bat 'docker tag latestapiframework:latest gcekmadhu/latestapiframework'
                  bat 'docker push gcekmadhu/latestapiframework:latest'
                }
              }
            }

        stage('Run Docker Image with Regression Tests') {
    steps {
        script {

        def exitCode = bat(script: "docker run --name restapiframework${BUILD_NUMBER} gcekmadhu/latestapiframework:latest mvn test -Dsurefire.suiteXmlFiles=src/test/resources/TestRunner/testng.xml", returnStatus: true)
            if (exitCode != 0) {
                currentBuild.result = 'FAILURE' // Mark the build as failed if tests fail
            }

            // Even if tests fail, copy the report (if present)
            bat "docker start restapiframework${BUILD_NUMBER}"
       	   // sh "sleep 60"
            bat "docker cp restapiframework${BUILD_NUMBER}:/app/reports/APIExecutionReport.html ${WORKSPACE}/reports"
            bat "docker rm -f restapiframework${BUILD_NUMBER}"
       			 }
    		}
		}



		stage('Publish Regression Extent Report'){
            steps{
                     publishHTML([allowMissing: false,
                                  alwaysLinkToLastBuild: false,
                                  keepAll: false,
                                  reportDir: 'reports',
                                  reportFiles: 'APIExecutionReport.html',
                                  reportName: 'API HTML Regression Extent Report',
                                  reportTitles: ''])
            }
        }





    }
}